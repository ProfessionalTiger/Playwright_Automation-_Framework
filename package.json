{
  "name": "project_test",
  "version": "1.0.0",
  "description": "Playwright Test Automation Framework",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "playwright test",
    "test:debug": "playwright test --debug",
    "test:headed": "playwright test --headed",
    "test:chromium": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:webkit": "playwright test --project=webkit",
    "test:all-browsers": "playwright test --project=chromium --project=firefox --project=webkit",
    "test:dev": "cross-env ENV=dev playwright test",
    "test:staging": "cross-env ENV=staging playwright test",
    "test:prod": "cross-env ENV=prod playwright test",
    "test:lighthouse": "playwright test tests/lighthouse.spec.ts --headed",
    "test:lighthouse:dev": "cross-env LOGIN_URL=https://trunk-qa.elixirlab.net/web/tango STAGING_URL=https://trunk-qa.elixirlab.net/elixir/default/dashboard playwright test tests/lighthouse-simple.spec.ts",
    "test:lighthouse:staging": "cross-env LOGIN_URL=https://dev-stage1.elixirlab.net/web/tango STAGING_URL=https://dev-stage1.elixirlab.net/elixir/default/dashboard playwright test tests/lighthouse-simple.spec.ts",
    "test:lighthouse:prod": "cross-env LOGIN_URL=https://example.com STAGING_URL=https://example.com playwright test tests/lighthouse-simple.spec.ts",
    "test:lighthouse:custom": "cross-env playwright test tests/lighthouse-simple.spec.ts",
    "test:performance": "playwright test tests/performance.spec.ts",
    "report": "playwright show-report",
    "report:lighthouse": "npx ts-node scripts/generateLighthouseReport.ts"
  },
  "keywords": [
    "playwright",
    "automation",
    "testing",
    "e2e"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@faker-js/faker": "^9.0.0",
    "@playwright/test": "^1.56.1",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.10.0",
    "allure-playwright": "^3.0.2",
    "chrome-launcher": "^1.1.2",
    "cross-env": "^7.0.3",
    "dotenv": "^16.6.1",
    "fs-extra": "^11.2.0",
    "lighthouse": "^12.0.0",
    "ts-node": "^10.9.2"
  }
}
